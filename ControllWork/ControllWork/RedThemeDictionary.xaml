<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:ControllWork">
    
    <Style TargetType="Grid">
        <Setter Property="Background" Value="#FF875050"/>
    </Style>
    <Style TargetType="Button">
        <Setter Property="Control.Foreground" Value="#FFFDD0D0"/>
        <Setter Property="Control.Background" Value="#FF811414"/>
        <Setter Property="Control.BorderBrush" Value="#FF400101"/>
    </Style>
    <Style TargetType="Label">
        <Setter Property="Control.Foreground" Value="#FFFDD0D0"/>
    </Style>
    <Style TargetType="TextBox">
        <Setter Property="Control.Foreground" Value="#FFFDD0D0"/>
        <Setter Property="Control.Background" Value="#FF811414"/>
        <Setter Property="Control.BorderBrush" Value="#FF400101"/>
    </Style>

</ResourceDictionary>