<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:ControllWork">

    <Style TargetType="Grid">
        <Setter Property="Background" Value="#FF272424"/>
    </Style>
    <Style TargetType="Button">
        <Setter Property="Control.Foreground" Value="WhiteSmoke"/>
        <Setter Property="Control.Background" Value="DimGray"/>
        <Setter Property="Control.BorderBrush" Value="Gray"/>
    </Style>
    <Style TargetType="Label">
        <Setter Property="Control.Foreground" Value="WhiteSmoke"/>
    </Style>
    <Style TargetType="TextBox">
        <Setter Property="Control.Foreground" Value="WhiteSmoke"/>
        <Setter Property="Control.Background" Value="DimGray"/>
        <Setter Property="Control.BorderBrush" Value="Gray"/>
    </Style>


</ResourceDictionary>